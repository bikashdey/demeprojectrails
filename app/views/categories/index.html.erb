<h1 class="text-center mt-4">categories!</h1>

<p>
    <%= link_to 'Create a new category', new_category_path, class: " text-success btn btn-outline-info"%>
</p>
<div class="container ">


    <% @categories.each do |category| %>
        <div class="row justify-content-md-center ">
            <div class="col-4 mt-4 ">


                <div class="card text-center shadow mb-5 bg-white rounded">
                   
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= link_to category['name'],category_path(category['id']),class: "text-success" %>
                        </h5>
                         <p class="card-text">
                            <%= pluralize(get_category_articles(category['id']).count,"article") %>
                        </p>
                    </div>
                    <div class="card-footer text-muted">
                        <small>created <%= time_ago_in_words(category['created_at']) %> ago, edited <%= time_ago_in_words(category['updated_at']) %> </small>
                    </div>
                </div>

            </div>
        </div>
    <% end %>
</div>
