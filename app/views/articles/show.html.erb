
<h2 class="text-center mt-4">Title: <%= @article['title'] %></h2>
<p>
    <%= link_to 'Create a new article', new_article_path, class: " text-success btn btn-outline-info"%>
</p>
<div class="container ">


    
        <div class="row justify-content-md-center ">
            <div class="col-8 mt-4 ">
                <div class="card text-center shadow mb-5 bg-white rounded">
                    <div class="card-header font-italic">
                 
                        by <%= link_to @article['username'] , user_path%>
                        
                        <%# if article['categories'].any? %>
                         
                            <div class = "mt-2"><%#= render article['categories'] %></div>

                        <%# end %>
                    </div>
                
                    <div class="card-body">
  
                        <div class="text-left card-text">
                            <%= simple_format(@article['description']) %>
                        </div>
                        
                        
                        <% if logged_in? && ((@article['user_id'] == current_user['id']) || current_user.admin?) %>
                        
                        
                            <%= link_to 'edit',edit_article_path(@article['id']),class: "btn btn-outline-info"%>
                            <%= link_to 'Delete',article_path(@article['id']),class: "btn btn-outline-danger",method: :delete, data: {confirm: "Are you sure?"}%>
                        <% end %>
                    </div>


                    <div class="card-footer text-muted">
                        <%#<small>created <%= time_ago_in_words(article['created_at']) %> ago, edited <%#= time_ago_in_words(article['updated_at']) %> </small>
                    </div>
                </div>

            </div>
        </div>
        
</div>
<div class="text-center">
    <%= link_to '[Home Page]', articles_path, class: "text-info" %>
</div>
