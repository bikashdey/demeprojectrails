<div class="container">

    <div class="row justify-content-center">
        <div class="col-8">
        <%= render 'shared/errors', obj: @article %>
            <%= form_with(model: @article,class: "shadow p-4 mb-2 bg-info rounded", local: true) do |f| %>

            <div class="form-group row">
                <%= f.label :title, class: "col-2 col-form-label text-dark" %>
                <div class="col-8">
                    <%= f.text_field :title, class: "form-control shadow rounded", placeholder: " Title of the Article" %>
                </div>
            </div>
            <div class="form-group row">
                <%= f.label :description, class: "col-2 col-form-label text-dark"%>
                <div class="col-8">
                    <%= f.text_area :description,rows: 10, class: "form-control shadow rounded",placeholder: "Description of the Article" %>
                </div>
            </div>

            <div class="form-group row">
                <%= f.label :category, class: "col-2 col-form-label text-dark"%>
                <div class="col-8">
                    <%= f.collection_select(:category_ids, Category.all, :id , :name,
                    {prompt: "Make your selection from the list below (can be empty)"},{ multiple: true , size: 3,class: "custom-select shadow rounded"} )%>
                </div>
            </div>

            <div class="form-group text-center ">
                <%= f.submit class: "btn btn-outline-success btn-lg"%>
            </div>
        </div>
        <% end %>
    </div>
</div>