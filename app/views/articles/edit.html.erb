
<h1 class="text-center mt-4"> Edit the Article</h1>

<div class="container">

    <div class="row justify-content-center">
        <div class="col-8">
        <%#= render 'shared/errors', obj: @article %>
            <%= form_with(url: article_path(@article['id']),class: "shadow p-4 mb-2 bg-info rounded", local: true,method: :put) do |f| %>

            <div class="form-group row">
                <%= f.label :title, class: "col-2 col-form-label text-dark" %>
                <div class="col-8">
                    <%= f.text_field :title, value: "#{@article['title']}", class: "form-control shadow rounded", placeholder: " Title of the Article" %>
                </div>
            </div>
            <div class="form-group row">
                <%= f.label :description, class: "col-2 col-form-label text-dark"%>
                <div class="col-8">
                    <%= f.text_area :description ,value: "#{@article['description']}", rows: 10, class: "form-control shadow rounded",placeholder: "Description of the Article" %>
                </div>
            </div>

            <div class="form-group row">
                <%= f.label :category, class: "col-2 col-form-label text-dark"%>
                <div class="col-8">
                    <%= f.collection_select(:category_ids, Category.all, :id , :name,
                    {prompt: "Make your selection from the list below (can be empty)"},{ multiple: true , size: 3,class: "custom-select shadow rounded"} )%>
                </div>
            </div>

            <div class="form-group text-center ">
                <%= f.submit class: "btn btn-outline-success btn-lg"%>
            </div>
        </div>
        <% end %>
    </div>
</div>

<div class="text-center">
    <%= link_to '[Home Page]', articles_path, class: "text-info" %>
</div>

