<h1 class="text-center mt-4"> Edit the User</h1>

<%#= render 'form' %>
<div class="container">

    <div class="row justify-content-center">
        <div class="col-8">
        <%#= render 'shared/errors',obj: @user %>
            <%= form_with(url: user_path,class: "shadow p-4 mb-2 bg-info rounded", local: true,method: :put) do |f| %>

            <div class="form-group row">
                <%= f.label :username, class: "col-2 col-form-label text-dark" %>
                <div class="col-8">
                    <%= f.text_field :username,value: "#{@user.first['username']}", class: "form-control shadow rounded", placeholder: " Enter your username" %>
                </div>
            </div>
            <div class="form-group row">
                <%= f.label :email, class: "col-2 col-form-label text-dark"%>
                <div class="col-8">
                    <%= f.email_field :email, value: "#{@user.first['email']}", class: "form-control shadow rounded",placeholder: "Enter your email address" %>
                </div>
            </div>
            <div class="form-group row">
                <%= f.label :password, class: "col-2 col-form-label text-dark"%>
                <div class="col-8">
                    <%= f.password_field :password,value: "#{@user.first['password']}",class: "form-control shadow rounded",placeholder: "Enter your password" %>
                </div>
            </div>

            <div class="form-group text-center ">
                <%= f.submit('update user',class: "btn btn-outline-success btn-lg")%>
                
            </div>
            
        </div>
            <div class="form-group text-center ">
                <%= link_to 'login!', login_path, class: " btn btn-outline-success btn-lg"%>
            </div>
        <% end %>
    </div>
</div>


<div class="text-center">
    <%= link_to '[Home Page]', articles_path, class: "text-info" %>
</div>