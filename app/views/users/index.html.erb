
<h1 class="text-center mt-4"> Bloggers!</h1>





<div >
    <%= link_to 'Create a new User',signup_path, class: " text-success btn btn-outline-info"%>
    <%= link_to 'Home Page', articles_path, class: " text-success btn btn-outline-info"%>
</div>


<div class="container ">


    <% @users.each do |user| %>
        <div class="row justify-content-md-center ">
            <div class="col-8 mt-4 ">


                <div class="card text-center shadow mb-5 bg-white rounded">
                    <div class="card-header font-italic">
                        by <%= user.username %>
                    </div>
                    <div class="card-body">

                        <p class="card-text">
                            <%= pluralize(user.articles.count,"article") %>
                        </p>
                        <%= link_to 'view Profile',user,class: "btn btn-outline-info"%>
                        <% if logged_in? %>
                            <% if user == current_user %>
                                <%= link_to 'Edit Profile',edit_user_path(user.id),class: "btn btn-outline-info"%>
                            <% end %>
                            <% if current_user.admin? %>
                                <%= link_to "Delete", user_path(user), class: "btn btn-outline-danger",method: :delete,data: {confirm: "Are you sure to delete account ?"} %>
                            <% end %>
                        <% end%>
                    </div>
                    <div class="card-footer text-muted">
                        <small>Joined <%= time_ago_in_words(user.created_at) %> ago</small>
                    </div>
                </div>

            </div>
        </div>
    <% end %>
</div>






